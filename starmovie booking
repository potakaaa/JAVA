import java.util.InputMismatchException;
import java.util.Scanner;


public class Main {
    static void informationChecker() {
        Scanner sc = new Scanner(System.in);
        while (true) {
            System.out.println("Enter Name:");
            String customerName = sc.nextLine().toUpperCase();
            if (customerName.matches(".*\\d.*")) {
                System.out.println("Error: Your name cannot contain numbers!");
            } else {
                break;
            }
        }
        while(true) {
            System.out.println("Enter Age:");
            try {
                int age = sc.nextInt();
            } catch(InputMismatchException e) {
                System.out.println("Error: Input should only contain numbers");
            }
        }

    }
    public static void main(String[] args) {
        System.out.println("       WELCOME TO STARMOVIE ");
        Scanner sc = new Scanner(System.in);
        boolean boolAnswer = true;
        while (boolAnswer == true) {
            System.out.println("\nDo you want to book your reservation (y/n)?");
            String answer = sc.nextLine().toLowerCase();
            switch (answer) {
                case "n":
                    System.out.println("Thank you for checking Starmovie!");
                    boolAnswer = false;
                    break;
                case "y":
                    System.out.println("\n---------AVAILABLE ROOMS---------");
                    System.out.println("A. Couple Room ----> Up to 2 pax");
                    System.out.println("B. Family Room ----> Up to 5 pax");
                    System.out.println("C. Barkada Room ---> Up to 10 pax");
                    System.out.println("----------120 per head-----------");
                    boolAnswer = false;
                    while (true) {
                        System.out.println("Choose your room: ");
                        String roomChoice = sc.nextLine().toUpperCase();
                        if (roomChoice.matches(".*\\d.*")) {
                            System.out.println("Error: Choose only from A-C!");
                        } else if (roomChoice == "A") {
                            informationChecker();
                        } else if (roomChoice == "B") {
                            informationChecker();
                        } else if (roomChoice == "C") {
                            informationChecker();
                        } else {
                            System.out.println("Error: Choose only from A-C!");
                        }
                    }
                default:
                    System.out.println("Invalid Input! (y/n) only!");
                    break;


            }
        }
    }
}
